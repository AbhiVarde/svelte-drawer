{
  "name": "@abhivarde/svelte-drawer",
  "version": "0.0.23",
  "description": "A drawer component for Svelte 5, inspired by Vaul",
  "author": "Abhi Varde",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "npm run test:integration && npm run test:unit",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.49.1",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "publint": "^0.2.12",
    "svelte": "^5.45.6",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.6"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "svelte",
    "svelte5",
    "drawer",
    "dialog",
    "modal",
    "sheet",
    "component",
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AbhiVarde/svelte-drawer.git"
  },
  "bugs": {
    "url": "https://github.com/AbhiVarde/svelte-drawer/issues"
  },
  "homepage": "https://drawer.abhivarde.in"
}
